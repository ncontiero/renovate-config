{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableRateLimiting"],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "commitMessageTopic": "{{depName}}",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "configMigration": true,
  "minimumReleaseAge": "1 days",
  "packageRules": [
    { "matchDatasources": ["npm"], "minimumReleaseAge": "2 days" },
    {
      "matchPackageNames": ["*"],
      "semanticCommitType": "chore",
      "dependencyDashboardApproval": false
    },
    {
      "enabled": false,
      "matchDepTypes": ["engines"],
      "matchPackageNames": ["node"]
    },
    { "groupName": "clerk packages", "matchPackageNames": ["@clerk/**"] },
    {
      "groupName": "rspress packages",
      "matchPackageNames": ["rspress", "@rspress/**"]
    },
    { "groupName": "t3-env packages", "matchPackageNames": ["@t3-oss/env-**"] },
    {
      "groupName": "contentlayer2 packages",
      "matchPackageNames": ["contentlayer2", "next-contentlayer2"]
    },
    {
      "groupName": "changesets packages",
      "matchPackageNames": ["@changesets/**"]
    },
    {
      "groupName": "bull-board packages",
      "matchPackageNames": ["@bull-board/**"]
    },
    {
      "groupName": "react-email packages",
      "matchPackageNames": ["react-email", "@react-email/**"]
    },
    {
      "groupName": "trigger.dev packages",
      "matchPackageNames": ["trigger.dev", "@trigger.dev/**"]
    },
    {
      "groupName": "definitelyTyped",
      "automerge": true,
      "matchPackageNames": ["@types/**"]
    }
  ],
  "pip_requirements": {
    "managerFilePatterns": ["/(^|/)*requirements([./|-][a-z]+)?.(txt|pip)$/"]
  }
}