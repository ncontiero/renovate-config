{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableRateLimiting", "security:minimumReleaseAgeNpm"],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "commitMessageTopic": "{{depName}}",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "configMigration": true,
  "minimumReleaseAge": "1 days",
  "minimumReleaseAgeBehaviour": "timestamp-optional",
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:earlyMondays"]
  },
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "semanticCommitType": "chore",
      "dependencyDashboardApproval": false
    },
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "automerge": true
    },
    {
      "enabled": false,
      "matchDepTypes": ["engines"],
      "matchPackageNames": ["node"]
    },
    { "groupName": "clerk monorepo", "matchPackageNames": ["@clerk/**"] },
    {
      "groupName": "rspress monorepo",
      "matchPackageNames": ["rspress", "@rspress/**"]
    },
    { "groupName": "t3-env monorepo", "matchPackageNames": ["@t3-oss/env-**"] },
    {
      "groupName": "contentlayer2 monorepo",
      "matchPackageNames": ["contentlayer2", "next-contentlayer2"]
    },
    {
      "groupName": "changesets monorepo",
      "matchPackageNames": ["@changesets/**"]
    },
    {
      "groupName": "bull-board monorepo",
      "matchPackageNames": ["@bull-board/**"]
    },
    {
      "groupName": "react-email monorepo",
      "matchPackageNames": ["react-email", "@react-email/**"]
    },
    {
      "groupName": "trigger.dev monorepo",
      "matchPackageNames": ["trigger.dev", "@trigger.dev/**"]
    },
    {
      "groupName": "definitelyTyped",
      "automerge": true,
      "matchPackageNames": ["@types/**"]
    }
  ],
  "pip_requirements": {
    "managerFilePatterns": ["/(^|/)*requirements([./|-][a-z]+)?.(txt|pip)$/"]
  }
}